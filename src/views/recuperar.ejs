<html>
<%- include("partials/head") %>

<body style="overflow-y: hidden;">
    <div class="headerOriginal">
        <%- include("partials/headerAdmin") %>
    </div>
    <div class="headerNavbar">
        <%- include("partials/headernavbar") %>
    </div>
    <main class="mainLogin">

        <div class="LoginForm">


            <% if(locals.errors){ %>

                <script>
                    document.getElementById('popup-1').style.display = "block"
                </script>
    
                <div class="popup" id="popup-1">
                    <div class="overlay"></div>
                    <div class="popup-content" style="position: absolute; top: -34%;">
                        <div style="font-size: 40px; color: #ab191f;"  id="close-btn"><i class="fas fa-times-circle"></i></div>
                        <h2 style="font-size: 30px;">Atención!</h2>
                        <ul style=" padding-right: 40px; text-align: center; border-radius: 20px;">
                            <% for(let i = 0; i < errors.length;i++) { %>
                            <li style="list-style-type: none; font-size: 20px;"> <%= errors[i].msg %> </li>
                            <% } %>
                        </ul>
                    </div>
                </div>
    
                <script>
                    let close = document.getElementById('close-btn')
    
                    close.onclick = function () {
                        document.getElementById('popup-1').style.display = "none"
                        document.getElementById('popup-1').style.transition =  ('all 300ms ease-in-out')
                    }
                </script>
                <% } %>
    

            <%  if(locals.notExist){ %>

            <script>
                Swal.fire({
                    title: "El usuario no existe",
                    icon: "error",
                    position: 'center',
                    showConfirmButton: false,
                    timer: 1500,
                })
            </script>


            <% } %>




            <form class="register-form" id="recuperarForm" action="/login?_method=PUT" method="POST"
                enctype="application/x-www-form-urlencoded">
                <div class="inputLogin">
                    <input class="boton-login" type="text" id="email" placeholder="Correo electrónico"
                        name="emailRecuperado">

                    <label id="capsLock"> Mayúsculas activadas </label>
                    <input style="margin-bottom: 2vh;" class="boton-login" type="password" id="password"
                        name="passwordRecuperado" placeholder="Contraseña">

                    <!-- <i style=" position:absolute; right: 60px; top: 170px; cursor: pointer;" class="bi bi-eye-slash"
                        id="togglePassword"></i> -->
                    <br>
                    <input class="boton-login" placeholder="Repetir contraseña" name="passwordConfirmar"
                        id="passwordConfirmar" type="password">

                </div>
                <div>
                    <button id="recuperar" class="boton-enviar" type="submit">Enviar</button>
                </div>
            </form>
        </div>

    </main>
    <div class="footerNavbar">
        <%- include("partials/footernavbar") %>
    </div>

    <!-- <script src="/js/recuperarValidation.js"></script> -->
    <script src="/js/capsLock.js"></script>
    <script src="/js/showPassword.js"></script>

</body>

</html>